  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
       <ImageView fitHeight="3800" fitWidth="1930" pickOnBounds="true" preserveRatio="true">
       <image>
            <Image url="@../../../Assets/background/ExtendHomepage.png" />
         </image>
      </ImageView>
      <AnchorPane prefHeight="986.0" prefWidth="1536.0">
         <children>
            <Button fx:id="gameButton" layoutX="880" layoutY="400" mnemonicParsing="false" onAction="#onGameButtonClick" prefHeight="26.0" prefWidth="230.0" styleClass="transparent-button" stylesheets="@font.css" text="NEW GAME" textAlignment="CENTER">
               <font>
                  <Font name="PossumSaltareNF" size="33.0" />
               </font>
            </Button>
            <Button fx:id="optionsButton" layoutX="900" layoutY="500" mnemonicParsing="false" onAction="#onOptionsButtonClick" prefHeight="69.0" prefWidth="186.0" styleClass="transparent-button" stylesheets="@font.css" text="OPTIONS" textAlignment="CENTER">
               <font>
                  <Font name="PossumSaltareNF" size="33.0" />
               </font>
            </Button>
            <Button fx:id="quitButton" layoutX="930" layoutY="600" mnemonicParsing="false" onAction="#onQuitButtonClick" prefHeight="75.0" prefWidth="123.0" styleClass="transparent-button" stylesheets="@font.css" text="QUIT" textAlignment="CENTER">
               <font>
                  <Font name="PossumSaltareNF" size="33.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</GridPane>
